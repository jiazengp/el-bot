{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "el-bot": ["../el-bot/src/index.ts"]
    },
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "**/*/package.json", "src/plugins/**/*"],
  "exclude": ["dist", "node_modules", "test", "**/*spec.ts"]
}
