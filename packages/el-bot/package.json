{
  "name": "el-bot",
  "type": "module",
  "version": "1.0.0-beta.2",
  "description": "A quick qq bot framework for mirai.",
  "author": {
    "name": "云游君",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "AGPL-3.0",
  "homepage": "https://docs.bot.elpsy.cn/",
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/el-bot"
  },
  "bugs": {
    "url": "https://github.com/YunYouJun/el-bot/issues"
  },
  "keywords": [
    "el-bot",
    "elpsy",
    "bot",
    "mirai",
    "qq",
    "framework"
  ],
  "exports": {
    "./*": "./*",
    ".": {
      "import": "./index.ts",
      "require": "./dist/index.js"
    }
  },
  "main": "./index.ts",
  "types": "dist/index.d.ts",
  "bin": {
    "el": "bin/el-bot.ts",
    "el-bot": "bin/el-bot.ts"
  },
  "files": [
    "bin",
    "core",
    "node",
    "plugins",
    "types"
  ],
  "engines": {
    "node": ">=18"
  },
  "mcl": {
    "folder": "mcl"
  },
  "scripts": {
    "build": "tsup && npm run copy:pkg",
    "build:api": "npx typedoc",
    "copy:pkg": "tsx scripts/copy.ts",
    "dev": "npm run watch",
    "watch": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@octokit/webhooks": "^13.3.0",
    "@octokit/webhooks-methods": "^5.1.0",
    "c12": "^1.11.2",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "dayjs": "^1.11.13",
    "download": "^8.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "html-to-text": "^9.0.5",
    "js-yaml": "^4.1.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "mirai-ts": "^2.4.8",
    "mongoose": "^8.6.3",
    "node-napcat-ts": "^0.2.21",
    "node-schedule": "^2.1.1",
    "picocolors": "^1.1.0",
    "progress": "^2.0.3",
    "qq-guild-bot": "^2.9.5",
    "qrcode": "^1.5.4",
    "rss-parser": "^3.13.0",
    "shelljs": "^0.8.5",
    "vite-node": "^2.1.1",
    "winston": "^3.14.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/download": "^8.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/html-to-text": "^9.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/node": "^22.5.5",
    "@types/node-schedule": "^2.1.7",
    "@types/progress": "^2.0.7",
    "@types/qrcode": "^1.5.5",
    "@types/shelljs": "^0.8.15",
    "@types/xml2js": "^0.4.14",
    "@types/yargs": "^17.0.33",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.1",
    "esbuild-register": "^3.6.0",
    "tsup": "^8.3.0",
    "typedoc": "^0.26.7",
    "typescript": "^5.6.2"
  },
  "directories": {
    "lib": "https://github.com/YunYouJun/mirai-ts"
  },
  "ecosystem": {
    "el-bot-api": "https://github.com/ElpsyCN/el-bot-api",
    "el-bot-plugins": "https://github.com/ElpsyCN/el-bot-plugins",
    "el-bot-docs": "https://github.com/ElpsyCN/el-bot-docs",
    "el-bot-template": "https://github.com/ElpsyCN/el-bot-template",
    "el-bot-web": "https://github.com/ElpsyCN/el-bot-web"
  }
}
