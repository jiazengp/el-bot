{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "el-bot": ["../packages/el-bot/src/index.ts"]
    },
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "**/*/package.json",
    "src/plugins/**/*",
    "el-bot.config.ts"
  ],
  "exclude": ["dist", "node_modules", "test", "**/*spec.ts"]
}
